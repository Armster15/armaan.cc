<a
  id="skip-to-content"
  href="#main"
  class:list={[
    "absolute right-0 left-0 z-20 mx-auto w-fit -translate-y-[100vh] focus:translate-y-4",
    "rounded-sm bg-blue-500 px-3 py-2 text-white outline-offset-4 active:bg-blue-600",
  ]}
>
  Skip to content
</a>

<script>
  const linkEl = document.getElementById("skip-to-content")!;

  linkEl.addEventListener("click", (ev) => {
    ev.preventDefault();

    const mainContainer = document.querySelector<HTMLDivElement>("#main");
    if (!mainContainer) {
      console.warn("[SkipToContent.astro] Main container does not exist!");
      window.location.hash = "#main";
    } else {
      mainContainer.focus();
    }
  });
</script>
