---
interface Props {
  isNested?: boolean;
}
const { isNested } = Astro.props;
---

<li>
  <div class="flex items-start">
    <span
      class:list={[
        "mt-[0.9em] mr-2 h-1 w-1 shrink-0 rounded-full",
        isNested ? "bg-subtitle-light" : "bg-subtitle/70",
      ]}
      aria-hidden="true"></span>
    <span><slot /></span>
  </div>
  <slot name="nested" />
</li>
