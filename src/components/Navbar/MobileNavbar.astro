---
import { Icon } from "astro-icon";
import Socials from "./Socials.astro";
import Links from "./Links.astro";
---

<nav class="px-4 pb-0 pt-6 xs:px-6 sm:hidden">
  <div class="flex w-full items-center">
    <div class="flex flex-1 items-start justify-start gap-3">
      <a class="mt-1" href="/"><Icon name="icon" class="w-[4ch] rounded-full" aria-hidden /></a>

      <div class="text-left">
        <a href="/">
          <header
            class="mb-2 text-xl font-semibold lowercase leading-[20px] xs:mb-0 xs:leading-normal"
          >
            <span>Armaan</span>
            <br class="xs:hidden" />
            <span>Aggarwal</span>
          </header>
        </a>

        <Links />
      </div>
    </div>

    <Socials />
  </div>
</nav>
